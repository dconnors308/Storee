<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <data>
                <variable
                name="storiesViewModel"
                type="com.example.stohre.view_models.StoriesViewModel" />
        </data>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">
                <LinearLayout
                    android:id="@+id/foreground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@{storiesViewModel.backgroundColor}"
                    android:orientation="horizontal"
                    android:padding="16dp">
                        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/storiesListItemNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:text="@{storiesViewModel.storyName}"
                            android:textColor="@color/fontDarkGrey"/>
                </LinearLayout>
        </android.support.v7.widget.CardView>
</layout>
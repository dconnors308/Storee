<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_new_story">
    <data>
        <variable
            name="membersViewModel"
            type="com.example.stohre.view_models.MembersViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/fragment_new_story_top_view"
            layout="@layout/fragment_new_story_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_new_story_bottom_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="3"/>
        <LinearLayout
            android:id="@+id/fragment_new_story_bottom_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/primaryDarkColor"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_new_story_top_view"
            app:layout_constraintVertical_weight="1">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_new_story_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
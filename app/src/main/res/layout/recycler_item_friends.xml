<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <data>
                <variable
                        name="friendsViewModel"
                        type="com.example.stohre.view_models.FriendsViewModel" />
        </data>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
                <LinearLayout
                    android:id="@+id/foreground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@{friendsViewModel.backgroundColor}"
                    android:orientation="vertical"
                    android:padding="16dp">
                        <TextView
                            android:id="@+id/recycler_item_friends_user_name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="@{friendsViewModel.USER_NAME}"
                            android:textColor="@color/fontDarkGrey"/>
                </LinearLayout>
        </androidx.cardview.widget.CardView>
</layout>
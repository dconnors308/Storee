<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_friends">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryDarkColor"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_friends_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="visible"
            android:layoutAnimation="@anim/fall_down_animation"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fragment_friends_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:clickable="true"
            android:layout_gravity="bottom|right"
            app:rippleColor="@color/primaryTextColor"
            app:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/ic_add_circle_add_secondary_color_48dp"
            android:visibility="gone"/>
    </FrameLayout>
</layout>
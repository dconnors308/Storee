<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <data>
                <variable
                        name="storiesViewModel"
                        type="com.example.stohre.view_models.StoriesViewModel" />
        </data>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_stories_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/off_white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/foreground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/card_view_stories_story_name_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/foreground"
                            app:layout_constraintRight_toLeftOf="@id/card_view_stories_notifications_view">
                                <TextView
                                    android:id="@+id/card_view_stories_story_name_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="26sp"
                                    android:text="@{storiesViewModel.storyName}"
                                    android:textColor="@color/primaryDarkColor"
                                    android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/card_view_stories_queue_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@id/card_view_stories_story_name_view">
                                <TextView
                                    android:id="@+id/card_view_stories_story_queue_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@{storiesViewModel.storyMembers}"
                                    android:textColor="@color/primaryDarkColor"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/card_view_stories_notifications_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/card_view_stories_active_editor_notification_image_view"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:layout_constraintTop_toTopOf="@id/foreground"
                                    app:layout_constraintRight_toRightOf="@id/foreground"
                                    android:src="@drawable/ic_notifications_bell_color_48dp"
                                    android:visibility="@{storiesViewModel.activeEditorNotificationVisibility}"/>
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/card_view_stories_partially_configured_notification_image_view"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:layout_constraintTop_toTopOf="@id/foreground"
                                    app:layout_constraintRight_toRightOf="@id/foreground"
                                    android:src="@drawable/ic_priority_high_red_48dp"
                                    android:visibility="@{storiesViewModel.partiallyConfiguredNotificationVisibility}"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</layout>
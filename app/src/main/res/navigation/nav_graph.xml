<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_stories">
    <fragment
        android:id="@+id/fragment_stories"
        android:name="com.example.stohre.fragments.StoriesFragment"
        android:label="Stories">
        <action
            android:id="@+id/action_stories_to_new_stories"
            app:destination="@id/fragment_new_story" />
        <action
            android:id="@+id/action_stories_to_edit_story"
            app:destination="@id/fragment_edit_story"/>
        <action
            android:id="@+id/action_fragment_stories_to_fragment_friends"
            app:destination="@id/fragment_friends" />
    </fragment>
    <fragment
        android:id="@+id/fragment_new_story"
        android:name="com.example.stohre.fragments.NewStoryFragment"
        android:label="Create Story"
        tools:layout="@layout/fragment_new_story" />
    <fragment
        android:id="@+id/fragment_edit_story"
        android:name="com.example.stohre.fragments.EditStoryFragment"
        android:label="Edit Story"
        tools:layout="@layout/fragment_edit_story">
    </fragment>
    <fragment
        android:id="@+id/fragment_friends"
        android:name="com.example.stohre.fragments.FriendsFragment"
        android:label="Friends"
        tools:layout="@layout/fragment_friends" />
</navigation>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/stories">
    <fragment
        android:id="@+id/stories"
        android:name="com.example.stohre.fragments.StoriesFragment"
        android:label="Stories">
        <action
            android:id="@+id/action_stories_to_createStory"
            app:destination="@id/new_story"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/new_story"
        android:name="com.example.stohre.fragments.NewStoryFragment"
        android:label="Create Story"
        tools:layout="@layout/fragment_new_story" />
    <fragment
        android:id="@+id/friends"
        android:name="com.example.stohre.fragments.FriendsFragment"
        android:label="Friends"
        tools:layout="@layout/fragment_friends" />
</navigation>